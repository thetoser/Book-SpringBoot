<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhljava.bookspringboot.mapper.UserMapper">

    <!--User selectUserByName(@Param("username") String username);-->
    <select id="selectUserByName" resultType="User">
        select `id`, `username`, `password`, `email`
        from t_user
        where `username` = #{username}
    </select>

    <!--void insertUser(@Param("user") User user);-->
    <insert id="insertUser">
        insert into t_user (`id`, `username`, `password`, `email`)
        values (null, #{user.username}, #{user.password}, #{user.email})
    </insert>

    <!--selectUserByNameAndPassword-->
    <select id="selectUserByNameAndPassword" resultType="User">
        select `id`, `username`, `password`, `email`
        from t_user
        where `username` = #{username}
          and `password` = #{password}
    </select>

</mapper>
